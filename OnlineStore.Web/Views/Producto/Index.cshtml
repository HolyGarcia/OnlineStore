@model IEnumerable<OnlineStore.Web.Models.ProductoModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.productoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.urlImagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreImagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)

{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.productoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.urlImagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreImagen)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.productoId }) |
                @Html.ActionLink("Details", "Details", new { id=item.productoId }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.productoId  })
            </td>
        </tr>
}
    </tbody>
</table>
